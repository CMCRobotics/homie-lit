{
  "name": "@bcopy/homie-lit",
  "version": "1.0.0",
  "description": "A TypeScript library integrating Homie devices with DOM element attributes for visualization",
  "main": "dist/homie-lit.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "webpack serve --mode development --config webpack.lib.config.js",
    "build": "webpack --mode production --config webpack.lib.config.js",
    "build:dev": "webpack --mode development --config webpack.lib.config.js",
    "test": "jest",
    "demo:aframe": "npm run build:dev && webpack serve --mode development --config webpack.demo.config.js"
  },
  "keywords": [
    "homie",
    "lit-html",
    "typescript",
    "iot"
  ],
  "module": "dist/homie-lit.esm.js",
  "browser": "dist/homie-lit.js",
  "exports": {
    ".": {
      "import": "./dist/homie-lit.esm.js",
      "require": "./dist/homie-lit.js",
      "browser": "./dist/homie-lit.js"
    }
  },
  "author": "Brice Copy",
  "license": "MIT",
  "devDependencies": {
    "@types/aframe": "^1.2.7",
    "@types/jest": "^29.5.13",
    "@types/node": "^16.11.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "aframe": "^1.6.0",
    "lit": "^2.6.1"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
